<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:elevation="5dp"
  >

  <androidx.media3.ui.PlayerView
    android:id="@+id/player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:keep_content_on_player_reset="true"
    app:player_layout_id="@layout/custom_controls_layout">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <!-- Double Tap View -->
      <LinearLayout
        android:id="@+id/double_tap_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_double_tap"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
          android:id="@+id/double_tap"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="?android:attr/selectableItemBackgroundBorderless"
          android:visibility="invisible">

          <TextView
            android:id="@+id/double_tap_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="-15 seconds"
            android:textColor="#fff" />
        </RelativeLayout>
      </LinearLayout>

      <LinearLayout
        android:id="@+id/double_tap_right_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_background_double_tap"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        >

        <RelativeLayout
          android:id="@+id/double_tap_2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:background="?android:attr/selectableItemBackgroundBorderless"
          android:visibility="invisible">

          <TextView
            android:id="@+id/double_tap_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="-15 seconds"
            android:textColor="#fff" />
        </RelativeLayout>
      </LinearLayout>
      <!-- Double tap view -->

      <RelativeLayout
        android:id="@+id/overlay_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#66000000"
        android:fitsSystemWindows="true">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:padding="16dp">
          <!--          <androidx.mediarouter.app.MediaRouteButton-->
          <!--            android:id="@+id/media_route_button"-->
          <!--            android:layout_width="wrap_content"-->
          <!--            android:layout_height="wrap_content"-->
          <!--            android:layout_marginTop="8.dp"-->
          <!--            android:layout_marginEnd="24dp"-->
          <!--            android:background="?android:attr/selectableItemBackgroundBorderless"-->
          <!--            app:mediaRouteButtonTint="#ffff" />-->

        </LinearLayout>

        <RelativeLayout
          android:id="@+id/play_pause_background"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:layout_centerInParent="true"
          android:layout_centerHorizontal="true"
          android:layout_centerVertical="true"
          android:background="@drawable/rounded_background">

          <ImageButton
            android:id="@+id/animated_play_to_pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no"
            android:src="@drawable/animated_pause_to_play"
            tools:ignore="HardcodedText" />

          <ImageButton
            android:id="@+id/replay_to_pause"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:importantForAccessibility="no"
            android:src="@drawable/replay_to_pause"
            android:visibility="invisible"
            tools:ignore="HardcodedText" />

        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:gravity="end"
          android:orientation="vertical"
          android:padding="16dp">

          <ImageView
            android:id="@+id/preview_image_view"
            android:layout_width="270dp"
            android:layout_height="160dp"
            android:layout_gravity="left"
            android:background="@drawable/rounded_corner_background"
            android:importantForAccessibility="no"
            android:scaleType="fitXY"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded" />

          <TextView
            android:id="@+id/time_codes_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="8dp"
            android:text="@string/time_codes_start_value"
            android:textColor="#fff"
            android:textSize="10sp"
            android:visibility="invisible"
            tools:ignore="RtlHardcoded" />

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.media3.ui.DefaultTimeBar
              android:id="@+id/time_bar"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_weight="1" />

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:layout_gravity="center">

              <TextView
                android:id="@+id/time_codes_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/time_codes_start_value"
                android:textColor="#fff" />
            </LinearLayout>
          </LinearLayout>
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <LinearLayout
            android:id="@+id/settings_control_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:background="@drawable/rounded_background">

            <ImageButton
              android:id="@+id/settings_control"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="end"
              android:background="?android:attr/selectableItemBackgroundBorderless"
              android:clickable="true"
              android:contentDescription="not implemented"
              android:focusable="true"
              android:src="@drawable/baseline_more_horiz_24"
              tools:ignore="HardcodedText" />
          </LinearLayout>
            <LinearLayout
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:layout_gravity="end"
              android:background="@drawable/rounded_background"
              android:layout_marginStart="12dp">
              <ImageButton
                android:id="@+id/animated_full_to_exit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/animated_full_to_exit"
                android:focusable="true"
                android:clickable="true"
                tools:ignore="ContentDescription,HardcodedText" />
            </LinearLayout>
          </LinearLayout>
        </LinearLayout>

      </RelativeLayout>

    </FrameLayout>

  </androidx.media3.ui.PlayerView>

  <ProgressBar
    android:id="@+id/progress_bar"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:layout_centerInParent="true" />

</RelativeLayout>
